//all the vue code goes in this file
(function() {
		new Vue({
				//most vue code goes here
				el: '#main',
				data: {
					name: 'ivana',
					images: [],
					cuteAnimals: [{
							name: 'otter',
							cutenessScore: 7
						},
						{
							name: 'rabit',
							cutenessScore: 6
						},
						{
							name: 'penguin',
							cutenessScore: 8
						},
						{
							name: 'blobfish',
							cutenessScore: 2
						}, //closes blobfish
					] //closes cuteAnimals array
				}, // closes data
				// mounted method has a life cicle
				mounted: function() {
					var self = this;
					// here we'll make axios requests to get data from the server that we need to the render on screen
					axios.get('/cities').then(function(resp) {
			//			console.log('GET/cities', resp.data);
			//			console.log('self: ' , self);
						self.cities = resp.data;
						console.log('self.cities:', self.cities);
					})
				}

			}) //closes Vue instance
		})()
